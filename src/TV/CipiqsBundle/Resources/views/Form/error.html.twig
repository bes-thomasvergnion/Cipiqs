{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <li><i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li> 
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
