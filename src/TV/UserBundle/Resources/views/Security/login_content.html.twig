{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'security.login.username'|trans }}:</label>
    <input type="text" class="login-input" id="username" placeholder="Votre Pseudonyme" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans }}:</label>
    <input type="password" class="login-input" id="password" name="_password" placeholder="Votre mot de passe" required="required" />

    <div id="remember">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" class="btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<aside>
    <h3>Vous n'avez pas encore de compte sur CIPIQ-S.org ?</h3>
    <p>C'est rapide, gratuit et vous permettra de vous inscrire à nos différents congrès</p>
    <a href="{{ path('fos_user_registration_register')}}" class="btn">Créer un compte</a>
</aside>