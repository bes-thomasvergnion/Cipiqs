{% endblock %}

{% block javascripts %}
    <script src="{{ asset('cipiqs/js/add-date.js') }}" type="text/javascript"></script>
    <script src="{{ asset('cipiqs/js/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('cipiqs/js/gallery.js') }}" type="text/javascript"></script>
    <script>
        $( function() {
            $( "#tv_congresbundle_congres_dates input" ).datepicker({
                dateFormat: 'dd/mm/yy'
            });
        });
    </script>
{% endblock %}
