{% extends "::layout-admin.html.twig" %}

{% block title %}
    {{ parent() }} - Ajouter Congrès
{% endblock %}

{% block body %}
    <section  class="admin-content">
        <div class="admin-container">
            <h2>{{ title }}</h2>
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="main-info">
                    {{ form_widget(form.title, {'attr': {'class': 'title-input'}}) }}

                    <div class="main-info-1-2">
                        <label for="date"><i class="fa fa-calendar" aria-hidden="true"></i> Date(s): </label><br>
                        <div class="date-input">
                            {{ form_row(form.dates) }}
                        </div>
                        <a id="add-date" class="btn" href="#"><i class="fa fa-plus" aria-hidden="true"></i></a>
                    </div>
                    <div class="main-info-1-2 last">
                        <p><label for="localisation"><i class="fa fa-money" aria-hidden="true"></i> Prix: </label></p>
                        <p>{{ form_widget(form.priceDay1) }} €</p>
                        <p>{{ form_widget(form.priceDay2) }} €</p>
                    </div>
                    <div class="main-info-1-2">
                        <label for="localisation"><i class="fa fa-map-marker" aria-hidden="true"></i> Localisation: </label>
                        {{ form_widget(form.localisation, {'attr': {'class': 'localisation-input'}}) }}
                    </div>
                    <div class="main-info-1-2 last">
                        <p><label for="localisation"><i class="fa fa-money" aria-hidden="true"></i> Prix pour les 2 jours: </label></p>
                        <p>{{ form_widget(form.priceBoth) }} €</p>
                        <p><label for="localisation"><i class="fa fa-money" aria-hidden="true"></i> Prix de groupe pour les 2 jours: </label></p>
                        <p>{{ form_widget(form.groupPrice) }} €</p>
                    </div>
                    <div class="clearfix"></div>

                    <label for="description"><i class="fa fa-align-left" aria-hidden="true"></i> Description:</label>
                    {{ form_widget(form.content) }}
                    <div class="main-info-1-2">
                        <label for="localisation"><i class="fa fa-glass" aria-hidden="true"></i> Evenement: </label>
                        {{ form_widget(form.event) }}
                    </div>
                    <div class="main-info-1-2 last">
                        <label for="localisation"><i class="fa fa-money" aria-hidden="true"></i> Prix pour l'événement: </label>
                        {{ form_widget(form.eventPrice) }} €
                    </div>
                </div>

                <aside>
                    <div class="box">
                        <h3>Publier</h3>
                        <div class="box-content">
                            <label><i class="fa fa-map-pin" aria-hidden="true"></i> Etat: </label>
                            {{ form_widget(form.state) }}
                            <p><i class="fa fa-calendar" aria-hidden="true"></i> Date de publication: {{ congres.publicationDate|date('d/m/Y') }}</p>
                            <p><i class="fa fa-calendar" aria-hidden="true"></i> Dernière Modification: {{ congres.updatedAt|date('d/m/Y') }}</p>
                            <button type="submit" class="btn publish">
                                <i class="fa fa-paper-plane" aria-hidden="true"></i> Mettre à jour
                            </button>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="box">
                        <h3>Image</h3>
                        <div class="box-content">
                            {% if congres.image is not null %}
                                <div class="miniatures">
                                    <img class="" src="{{ asset(vich_uploader_asset(congres.image, 'file')) }}" alt="{{ congres.image.alt }}">
                                    <p>{{ congres.image.alt }}</p>
                                </div>
                            {% endif %}
                            {{ form_widget(form.image) }}
                            {{ form_errors(form.image) }}
                            {#<a id="link-gallery" href="#"><i class="fa fa-picture-o" aria-hidden="true"></i>Ajouter une image</a>#}
                        </div>
                    </div>
                    <div class="box">
                        <h3>Pré-programme</h3>
                        <div class="box-content">
                            {% if congres.preProgram is not null %}
                                <div class="pdf">
                                    <img class="" src="{{ asset('cipiqs/images/pdf-logo.png') }}" alt="{{ congres.preProgram.alt }}">
                                    <p>{{ congres.preProgram.alt }}</p>
                                    <div class="clearfix"></div>
                                </div>
                            {% endif %}
                            {{ form_widget(form.preProgram) }}
                            {{ form_errors(form.preProgram) }}
                        </div>
                    </div>
                    <div class="box last">
                        <h3>Résumé</h3>
                        <div class="box-content">
                            {% if congres.summary is not null %}
                                <div class="pdf">
                                    <img class="" src="{{ asset('cipiqs/web/images/pdf-logo.png') }}" alt="{{ congres.summary.alt }}">
                                    <p>{{ congres.summary.alt }}</p>
                                    <div class="clearfix"></div>
                                </div>
                            {% endif %}
                            {{ form_widget(form.summary) }}
                            {{ form_errors(form.summary) }}
                        </div>
                    </div>
                </aside>
                <input id="hidden-input" type="hidden" name="image" value="14">
            {{ form_end(form) }}
            <div class="clearfix"></div>
        </div>
    </section>
        
